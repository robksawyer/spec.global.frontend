		<h1><%= placement.name %></h1>
		<h3><%= placement.width %>x<%= placement.height %></h3>
	</div>
	<hr/>
	<div ng-controller="StandardPlacementController">
		<ul>
			<li><%= placement.file_type %></li>
			<li><%= placement.max_animation_framerate %></li>
			<li><%= placement.max_animation_length %></li>
